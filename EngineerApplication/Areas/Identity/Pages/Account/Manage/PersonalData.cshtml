@page
@inject CommonLocalizationService localizer
@model PersonalDataModel
@{
    ViewData["Title"] = @localizer.Get("PersonalData");
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@localizer.Get("YourAccountContains").</p>
        <p>
            <strong>@localizer.Get("DeletingThisData").</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@localizer.Get("Download")</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@localizer.Get("Delete")</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}