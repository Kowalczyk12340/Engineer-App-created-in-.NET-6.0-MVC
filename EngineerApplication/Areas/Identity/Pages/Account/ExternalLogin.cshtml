@page
@inject CommonLocalizationService localizer
@model ExternalLoginModel
@{
    ViewData["Title"] = @localizer.Get("Register");
}

<h1>@ViewData["Title"]</h1>
<h4>@localizer.Get("AssociateYour") @Model.LoginProvider @localizer.Get("Account").</h4>
<hr />

<p class="text-info">
    @localizer.Get("SuccessfullyAuthenticated")<strong>@Model.LoginProvider</strong>.
    @localizer.Get("EnterEmail").
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@localizer.Get("Register")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
