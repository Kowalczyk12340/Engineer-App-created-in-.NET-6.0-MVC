@model EngineerApplication.Entities.Commodity
@using EngineerApplication.Helpers
@using EngineerApplication.Resources
@using Microsoft.AspNetCore.Http
@inject CommonLocalizationService localizer
@inject IHttpContextAccessor HttpContextAccessor
@using EngineerApplication.Extensions

@{
    ViewData["Title"] = @localizer.Get("Details");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container backgroundWhite">
    <div class="card">
        <div class="card-header bg-light text-light ml-0 row container">
            <div class="col-12 col-md-6">
                <h1 class="text-primary">@Model.Name</h1>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <h1 class="text-muted">@localizer.Get("Total") : @((Math.Round((Model.Amount * Model.Price), 2)).ToString("c"))</h1>
                <h1 class="text-muted">@localizer.Get("VATPrice") : @((Math.Round((0.23 * (Model.Amount * Model.Price)), 2)).ToString("c"))</h1>
                <h4 class="text-muted">@localizer.Get("AmountOfCommodityToOrder") : @Model.Amount</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-success">@localizer.Get("Price") @localizer.Get("PerCommodity"): $@Model.Price</h3>
                                <p class="text-secondary">@Html.Raw(Model.LongDesc)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 text-center">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>

                </div>

            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">@localizer.Get("BackToList")</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    @{
                        var AddToCartEnabled = true;

                        if (HttpContextAccessor.HttpContext.Session.GetObject<List<int>>(UsefulConsts.SessionCart) != null)
                        {
                            var sessionList = HttpContextAccessor.HttpContext.Session.GetObject<List<int>>(UsefulConsts.SessionCart);
                            if (sessionList.Contains(Model.Id))
                            {
                                AddToCartEnabled = false;
                            }
                        }
                    }

                    @if (AddToCartEnabled)
                    {
                        <a asp-action="AddToCart" asp-route-CommodityId="@Model.Id" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">@localizer.Get("AddToCart")</a>
                    }
                    else
                    {
                        <button class="btn btn-primary btn-square form-control btn-lg" style="height:50px;" disabled>@localizer.Get("ItemInCart")</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>