@using EngineerApplication.Resources
@inject CommonLocalizationService localizer

@{
    ViewData["Title"] = @localizer.Get("Home");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <h1 style="text-align: center;">@localizer.Get("Home")</h1>

    <h4 style="text-align: center;">@localizer.Get("H1DescApp")</h4>

    <center><img style="width: 90%; height: fitcontent; align-items: center; margin: 0 auto;" src="~/images/homePageImg.jpg" /></center>

    <center><p style="width: 90%; text-align: justify;">@localizer.Get("DescApp")</p></center>

    <center><img style="width: 90%; height: fitcontent; align-items: center; margin: 0 auto;" src="~/images/homeSecond.jpg" /></center>

    <center><p style="width: 90%; text-align: justify;">@localizer.Get("DescApp2")</p></center>
</div>

<div class="row">
    <div class="col-12 col-lg-5 offset-lg-1">
        <form asp-action="Export" asp-controller="Home" method="post">
            <input type="hidden" name="GridHtml" />
            <input class="btn btn-success" type="submit" id="btnSubmit" value="@localizer.Get("ExportToPdf")" />
        </form>
    </div>
</div>

@section Scripts {
<script>
        $(document).ready(function () {
        $(function () {
            $("#btnSubmit").click(function () {
                $("input[name='GridHtml']").val($("#content").html());
            });
        });
    });
</script>
}